{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "app": ["./src/app/*"],
      "assets": ["./src/assets/*"],
      "config": ["./src/config/*"],
      "data": ["./src/data/*"],
      "services": ["./src/services/*"],
      "store": ["./src/store/*"],
      "ui": ["src/ui/*"],
      "utils": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
